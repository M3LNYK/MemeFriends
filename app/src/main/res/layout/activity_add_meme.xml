<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMeme"
    android:accessibilityPaneTitle=""
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_add_meme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Meme"
        android:layout_marginTop="24dp"
        android:textAppearance="?attr/textAppearanceHeadline6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- FRIEND SELECTION FIELD -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:id="@+id/friend_selection_dropdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/textView_add_meme"
        app:helperText="Required*"
        app:helperTextTextColor="@color/red_600"
        android:hint="Select friend">

        <AutoCompleteTextView
            android:id="@+id/dropdown_friend_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textAutoComplete" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- MEME NAME TEXT FIELD -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/outlinedTextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:hint="@string/label_meme_name"
        app:endIconMode="clear_text"
        app:layout_constraintTop_toBottomOf="@+id/friend_selection_dropdown">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/outlined_meme_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- MEME SOURCE FIELD -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:id="@+id/source_selection_dropdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/outlinedTextField"
        android:hint="Select source of meme">

        <AutoCompleteTextView
            android:id="@+id/source_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textAutoComplete" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Button add funny meme    -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:onClick="addMeme"
        android:backgroundTint="@color/green_500"
        android:text="Add Funny"
        app:layout_constraintStart_toStartOf="@id/source_selection_dropdown"
        app:layout_constraintTop_toBottomOf="@id/source_selection_dropdown"/>

    <!-- Button to add meme as not funny    -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="32dp"
        android:onClick="addMeme"
        android:backgroundTint="@color/red_500"
        android:text="Add Not Funny"
        app:layout_constraintEnd_toEndOf="@id/source_selection_dropdown"
        app:layout_constraintTop_toBottomOf="@id/source_selection_dropdown"/>


</androidx.constraintlayout.widget.ConstraintLayout>