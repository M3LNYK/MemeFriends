<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMeme"
    android:accessibilityPaneTitle=""
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_add_meme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Meme"
        android:layout_marginTop="24dp"
        android:textAppearance="?attr/textAppearanceHeadline6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- FRIEND SELECTION FIELD -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/til_friend_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_add_meme"
        android:hint="Selected friend"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tiet_friend_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:clickable="false"
            android:focusable="false"/>

    </com.google.android.material.textfield.TextInputLayout>

    <!-- MEME NAME TEXT FIELD -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/til_meme_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:hint="@string/label_meme_name"
        app:endIconMode="clear_text"
        app:layout_constraintTop_toBottomOf="@+id/til_friend_selection">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/outlined_meme_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- MEME SOURCE FIELD -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:id="@+id/til_meme_source_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/til_meme_name"
        android:hint="Select source of meme">

        <AutoCompleteTextView
            android:id="@+id/actv_source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textAutoComplete" />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/til_meme_source_selection">

        <!-- Button add funny meme    -->
        <Button
            android:id="@+id/button_add_funny_meme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="24dp"
            android:backgroundTint="@color/green_500"
            android:text="Add Funny"
            app:layout_constraintStart_toStartOf="@id/til_meme_source_selection"
            app:layout_constraintTop_toBottomOf="@id/til_meme_source_selection" />

        <!-- Button to add meme as not funny    -->
        <Button
            android:id="@+id/button_add_nf_meme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red_500"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="32dp"
            android:text="Add Not Funny"
            app:layout_constraintEnd_toEndOf="@id/til_meme_source_selection"
            app:layout_constraintTop_toBottomOf="@id/til_meme_source_selection" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>